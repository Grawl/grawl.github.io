@import 'mixins'
@import 'prefix-free'
testing()
#slides
	position	relative
	opacity	1
	.slides_container
		width	interactiveHeaderWidth
		overflow	hidden
		position	relative
		display	none
		float	left
		.slide
			width	interactiveHeaderWidth
			height	324px
			display	block
	.pagination
		position	absolute
		top	15px
		left	15px
		z-index	600
		margin	0
		padding	0
		li
			float	left
			val = 16px
			width	val
			height	val
			margin	0 5px 0 0
			list-style	none
			overflow	hidden
			background	white
			border-radius	50%
			offset = 2px
			box-shadow	offset offset 3px hsla(0,0%,0%,0.5)
			position	relative
			a
				position	absolute
				display	block
				width	100%
				text-align	center
				font-size: 1.1em
				line-height: 1.6em
				text-decoration	none
				color	hsl(304, 45%, 37%)
			&.current
				background	#674db7
				a
					color	white
	.caption
		z-index	500
		position	absolute
		bottom	105px
		left	0
		height	0
		width	100%
		overflow	hidden
		background	hsla(288, 78%, 16%, 0.5) url('img/caption-stamp.png') no-repeat 27px 22px
		color	#fff
		line-height	1.33
		text-shadow	none
		font-family	Verdana, "Geneva CY", "DejaVu Sans", sans-serif
		h1
			font-size	3em
			margin	0.55em 0 0
		p
			margin	0.2em 0
			font-size	1.2em
			text-transform	uppercase
		&>*
			padding-left	200px
			padding-right	30px